/* pages/about/about.wxss */
.page-style {
  padding: 5;
  margin: 5;
  display: flex;
  justify-content: center;
}


/* 先采用id选择器进行细分处理 */
.first-flex {
  /*设置盒子模型的px值*/
  padding: 0;
  margin: 0;
  /*使用flex布局方式*/
  display: flex;
  /*设置justify-content：space-around这样是水平线剧中*/
  justify-content: space-around;
}

/* 处理的是中间文字部分 */

.second-flex {
  padding: 5;
  margin: 5;
  display: flex;
  flex-direction: column;
  color: black;
  font-size: 14px;
  justify-content: center;
}

.third-flex {
  padding: 0;
  margin: 0;
  /*使用flex布局方式*/
  display: flex;
  /*设置justify-content：space-around这样是水平线剧中*/
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}

.text-style {
  color: red;
}

.movie-title {
  font-size: 16px;
  color: orange;
}

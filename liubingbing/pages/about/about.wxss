  justify-content: space-between;
}
.images-style {
  padding: 5;
  margin: 5;
  display: flex;
  justify-content: flex-start;
}

/* 处理的是中间文字flex */
.second-flex {
  padding: 5;
  margin: 5;
  display: flex;
  flex-direction: column;
  color: black;
  font-size: 14px;
  justify-content: center;
}

/* 处理第三部分的按钮评分问题 */
